<% if @user.blogs.any? %>
  <h3>Blogs (<%= @user.blogs.count %>)</h3>
  <ol class="blogs">
    <% @blogs.each do |blog| %>
      <li>
        <span class="title"><%= blog.title %></span>
        <span class="timestamp">Posted <%= time_ago_in_words(blog.created_at) %> ago.</span>
      </li>
    <% end %>
  </ol>
  <%= will_paginate @blogs %>
<% end %>

<% if @user.bcmts.any? %>
  <h3>Blog Comments (<%= @user.bcmts.count %>)</h3>
  <ol class="bcmts">
    <% @bcmts.each do |bcmt| %>
      <li>
        <span class="blog_id"><%= bcmt.blog_id %></span>
        <span class="content"><%= bcmt.content %></span>
        <span class="timestamp">Posted <%= time_ago_in_words(bcmt.created_at) %> ago.</span>
      </li>
    <% end %>
  </ol>
  <%= will_paginate @bcmts %>
<% end %>

<% if @user.acmts.any? %>
  <h3>Attraction Comments (<%= @user.acmts.count %>)</h3>
  <ol class="acmts">
    <% @acmts.each do |acmt| %>
      <li>
        <span class="attraction_id"><%= acmt.attraction_id %></span>
        <span class="content"><%= acmt.content %></span>
        <span class="timestamp">Posted <%= time_ago_in_words(acmt.created_at) %> ago.</span>
      </li>
    <% end %>
  </ol>
  <%= will_paginate @acmts %>
<% end %>

<% if @user.hcmts.any? %>
  <h3>Hotel Comments (<%= @user.hcmts.count %>)</h3>
