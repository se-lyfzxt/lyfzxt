        <span class="content"><%= hcmt.content %></span>
        <span class="timestamp">Posted <%= time_ago_in_words(hcmt.created_at) %> ago.</span>
      </li>
    <% end %>
  </ol>
  <%= will_paginate @hcmts %>
<% end %>

<% if @user.requests.any? %>
  <h3>Requests (<%= @user.requests.count %>)</h3>
  <ol class="requests">
    <% @requests.each do |request| %>
      <li>
        <span class="city_id"><%= request.city_id %></span>
        <span class="time"><%= request.time %></span>
        <span class="number"><%= request.number %></span>
        <span class="note"><%= request.note %></span>
        <span class="timestamp">Posted <%= time_ago_in_words(request.created_at) %> ago.</span>
      </li>
    <% end %>
  </ol>
  <%= will_paginate @requests %>
<% end %>
