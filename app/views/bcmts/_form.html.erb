<%= form_for(@bcmt) do |f| %>
  <% if @bcmt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bcmt.errors.count, "error") %> prohibited this bcmt from being saved:</h2>

      <ul>
      <% @bcmt.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if signed_in? && current_user.admin? %>
    <div class="field">
      <%= f.label :blog_id %><br>
      <%= f.number_field :blog_id %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br>
      <%= f.number_field :user_id %>
    </div>
  <% else %>
    <%= f.hidden_field :blog_id, :readonly=>true%>
  <% end %>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
